// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String // 'student' | 'staff' | 'admin' | 'lms_student'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  student   Student?
  staff     Staff?
}

model Student {
  id         String       @id @default(uuid())
  userId     String       @unique
  firstName  String
  lastName   String
  className  String
  rollNumber Int
  phone      String?
  address    String?
  dob        DateTime?
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  user       User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  fees       Fee[]
  attendance Attendance[]
  grades     Grade[]
}

model Staff {
  id        String   @id @default(uuid())
  userId    String   @unique
  firstName String
  lastName  String
  phone     String?
  address   String?
  department String?
  position  String?
  salary    Decimal? @db.Decimal(10, 2)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  subjects  Subject[]
}

model Class {
  id        String   @id @default(uuid())
  name      String   @unique
  grade     Int
  section   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  subjects  Subject[]
}

model Subject {
  id        String   @id @default(uuid())
  name      String
  code      String   @unique
  classId   String?
  staffId   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  staff     Staff?   @relation(fields: [staffId], references: [id])
  class     Class?   @relation(fields: [classId], references: [id])
  materials Material[]
  assignments Assignment[]
}

model Fee {
  id          String   @id @default(uuid())
  studentId   String
  amount      Decimal  @db.Decimal(10, 2)
  dueDate     DateTime
  paidDate    DateTime?
  status      String   // 'pending' | 'paid' | 'overdue'
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  student     Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)
}

model Attendance {
  id        String   @id @default(uuid())
  studentId String
  date      DateTime
  status    String   // 'present' | 'absent' | 'late'
  remarks   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@unique([studentId, date])
}

model Grade {
  id        String   @id @default(uuid())
  studentId String
  subjectId String
  marks     Decimal  @db.Decimal(5, 2)
  maxMarks  Decimal  @db.Decimal(5, 2)
  examType  String   // 'assignment' | 'quiz' | 'midterm' | 'final'
  examDate  DateTime?
  remarks   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  student   Student  @relation(fields: [studentId], references: [id], onDelete: Cascade)

  @@index([studentId, subjectId])
}

model Material {
  id          String     @id @default(uuid())
  subjectId   String
  title       String
  description String?
  type        String     // 'pdf' | 'video' | 'link' | 'document'
  url         String
  fileName    String?
  fileSize    Int?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  subject     Subject    @relation(fields: [subjectId], references: [id], onDelete: Cascade)
}

model Assignment {
  id          String   @id @default(uuid())
  subjectId   String
  title       String
  description String?
  dueDate     DateTime
  maxMarks    Decimal  @db.Decimal(5, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  subject     Subject  @relation(fields: [subjectId], references: [id], onDelete: Cascade)
  submissions Submission[]
}

model Submission {
  id           String     @id @default(uuid())
  assignmentId String
  studentId    String
  fileUrl      String?
  fileName     String?
  submittedAt  DateTime   @default(now())
  grade        Decimal?   @db.Decimal(5, 2)
  feedback     String?
  status       String     @default("submitted") // 'submitted' | 'graded' | 'late'
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)

  @@unique([assignmentId, studentId])
}

model Quiz {
  id          String      @id @default(uuid())
  subjectId   String
  title       String
  description String?
  duration    Int         // minutes
  maxMarks    Decimal     @db.Decimal(5, 2)
  questions   Json        // Array of questions
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  attempts    QuizAttempt[]
}

model QuizAttempt {
  id        String   @id @default(uuid())
  quizId    String
  studentId String
  answers   Json     // Student's answers
  score     Decimal? @db.Decimal(5, 2)
  completed Boolean  @default(false)
  startedAt DateTime @default(now())
  completedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)

  @@unique([quizId, studentId])
}

model Announcement {
  id        String   @id @default(uuid())
  title     String
  content   String   @db.Text
  type      String   // 'general' | 'exam' | 'event' | 'fee'
  target    String   // 'all' | 'student' | 'staff'
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdBy String?
}

model AdmissionForm {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  email        String
  phone        String
  dob          DateTime
  address      String   @db.Text
  className    String
  documents    Json?    // Array of document URLs
  status       String   @default("pending") // 'pending' | 'shortlisted' | 'rejected' | 'accepted'
  remarks      String?
  submittedAt  DateTime @default(now())
  reviewedAt   DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

